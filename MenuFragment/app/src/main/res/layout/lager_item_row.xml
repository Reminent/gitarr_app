<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/product_item_row">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="250dp"
            android:layout_height="250dp">
        </ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="match_parent">

            <Button
                android:textSize="15dp"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:id="@+id/product_edit_button"
                android:text="Redigera"/>
            <Button
                android:textSize="15dp"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:id="@+id/product_delete_button"
                android:text="Ta bort"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productNameDesc"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Namn: "
                android:singleLine="true"
                />


            <TextView
                android:id="@+id/productName"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text=""
                android:singleLine="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productManufacturerDesc"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Tillverkare: "
                android:singleLine="true"
                />


            <TextView
                android:id="@+id/productManufacturer"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text=""
                android:singleLine="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productGenreDesc"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Genre: "
                android:singleLine="true"
                />


            <TextView
                android:id="@+id/productGenreName"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text=""
                android:singleLine="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productBuyingPriceDesc"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Inköpspris: "
                android:singleLine="true"
                />


            <TextView
                android:id="@+id/productBuyingPrice"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text=""
                android:singleLine="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productSellingPriceDesc"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Försäljningspris: "
                android:singleLine="true"
                />


            <TextView
                android:id="@+id/productSellingPrice"

                android:paddingTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="left"
                android:text=""
                android:singleLine="true"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
