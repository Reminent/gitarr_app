<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.magnus.menufragment.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:fontFamily="Arial"
            android:text="Balans"
            android:layout_gravity="top|center"
            android:singleLine="false"
            />
        <TextView
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:fontFamily="Arial"
            android:text="Summa"
            android:layout_gravity="top|center"
            android:singleLine="false"
            />
        <TextView
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:fontFamily="Arial"
            android:text="Datum"
            android:layout_gravity="top|center"
            android:singleLine="false"
            />

    </LinearLayout>


    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myListVieww"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/Ekonomi_Button_Ny_Inkommst"
            android:layout_alignParentBottom="true"
            android:text="Ny inkomst"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/Ekonomi_Button_Ny_Utgift"
            android:text="Ny utgift"/>

    </LinearLayout>

</LinearLayout>
