<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:layout_alignParentTop="true"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#FFFFFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="Ny annons"

        android:id="@+id/textView5"

        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textIsSelectable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTitel"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:hint="@string/Titel"
        android:textIsSelectable="false"
        android:textColorHint="#A9A9A9"
        android:backgroundTint="#000000"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBeskrivning"
        android:layout_below="@+id/editTextTitel"
        android:layout_alignStart="@+id/editTextTitel"
        android:hint="@string/Beskrivning"
        android:selectAllOnFocus="false"
        android:textColor="#000000"
        android:textColorHint="#A9A9A9"
        android:backgroundTint="#000000" />

    <ImageView
        android:id="@+id/image_camera"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="#ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"

            android:layout_height="match_parent"
            android:text="AVBRYT"
            android:id="@+id/avbryt"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:layout_alignTop="@+id/kamerasymbol"
            android:layout_alignBottom="@+id/gallerisymbol"
            android:background="#FFFFFF"
            android:textColor="#A9A9A9" />

        <Button
            android:text="TA KORT"
            android:id="@+id/kamerasymbol"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textSize="20dp"

            android:src="@drawable/kamerasymbol"
            android:background="#FFFFFF"
            android:textColor="#A9A9A9" />

        <Button
            android:text="VÃ„LJ BILD"
            android:id="@+id/gallerisymbol"
            android:layout_weight="1"
            android:textSize="20dp"

            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:src="@drawable/gallerisymbol"
            android:background="#FFFFFF"
            android:textColor="#A9A9A9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/klar"
            android:text="Klar"
            android:textColor="#A9A9A9"
            android:background="#FFFFFF" />

    </LinearLayout>



</LinearLayout>
